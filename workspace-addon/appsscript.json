{
  "timeZone": "Europe/Rome",
  "dependencies": {
    "enabledAdvancedServices": [
      {
        "userSymbol": "Drive",
        "version": "v2",
        "serviceId": "drive"
      },
      {
        "userSymbol": "Gmail",
        "version": "v1",
        "serviceId": "gmail"
      },
      {
        "userSymbol": "Calendar",
        "version": "v3",
        "serviceId": "calendar"
      },
      {
        "userSymbol": "Sheets",
        "version": "v4",
        "serviceId": "sheets"
      }
    ]
  },
  "exceptionLogging": "STACKDRIVER",
  "runtimeVersion": "V8",
  "addOns": {
    "common": {
      "name": "Zantara Bridge",
      "logoUrl": "https://raw.githubusercontent.com/Balizero1987/zantara-bridge/main/assets/zantara-icon.png",
      "homepageTrigger": {
        "runFunction": "onHomepage",
        "enabled": true
      },
      "universalActions": [
        {
          "label": "Open Zantara Dashboard",
          "openLink": "https://zantara-bridge-v2-prod-1064094238013.asia-southeast2.run.app"
        },
        {
          "label": "Quick Actions",
          "runFunction": "showQuickActions"
        }
      ]
    },
    "gmail": {
      "contextualTriggers": [
        {
          "unconditional": {},
          "onTriggerFunction": "onGmailMessage"
        }
      ],
      "composeTrigger": {
        "selectActions": [
          {
            "text": "Insert with Zantara",
            "runFunction": "onGmailCompose"
          }
        ]
      }
    },
    "drive": {
      "homepageTrigger": {
        "enabled": true,
        "runFunction": "onDriveHomepage"
      },
      "onItemsSelectedTrigger": {
        "runFunction": "onDriveItemsSelected"
      }
    },
    "calendar": {
      "homepageTrigger": {
        "enabled": true,
        "runFunction": "onCalendarHomepage"
      },
      "eventOpenTrigger": {
        "runFunction": "onCalendarEventOpen"
      },
      "eventUpdateTrigger": {
        "runFunction": "onCalendarEventUpdate"
      },
      "currentEventAccess": "READ_WRITE"
    },
    "sheets": {
      "homepageTrigger": {
        "enabled": true,
        "runFunction": "onSheetsHomepage"
      }
    },
    "docs": {
      "homepageTrigger": {
        "enabled": true,
        "runFunction": "onDocsHomepage"
      },
      "onFileScopeGrantedTrigger": {
        "runFunction": "onDocsFileScopeGranted"
      }
    }
  },
  "oauthScopes": [
    "https://www.googleapis.com/auth/gmail.addons.execute",
    "https://www.googleapis.com/auth/gmail.addons.current.message.readonly",
    "https://www.googleapis.com/auth/gmail.addons.current.action.compose",
    "https://www.googleapis.com/auth/calendar.addons.execute",
    "https://www.googleapis.com/auth/calendar.readonly",
    "https://www.googleapis.com/auth/drive.addons.metadata.readonly",
    "https://www.googleapis.com/auth/drive.readonly",
    "https://www.googleapis.com/auth/spreadsheets",
    "https://www.googleapis.com/auth/documents",
    "https://www.googleapis.com/auth/script.external_request",
    "https://www.googleapis.com/auth/userinfo.email"
  ],
  "urlFetchWhitelist": [
    "https://zantara-bridge-v2-prod-1064094238013.asia-southeast2.run.app/"
  ]
}