# ==============================================================================
# NUZANTARA RAG BACKEND - ENVIRONMENT TEMPLATE
# Copy to .env (or export as shell vars) and fill in secure values.
# This template mirrors everything referenced in backend/app/core/config.py
# ==============================================================================

# ------------------------------------------------------------------------------
# CORE SERVICE SETTINGS
# ------------------------------------------------------------------------------
ENVIRONMENT=development
SERVICE_NAME=nuzantara-rag
HOST=0.0.0.0
PORT=8080
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=true

# Authentication
API_KEYS=comma,separated,keys
API_AUTH_ENABLED=true
API_AUTH_BYPASS_DB=false
JWT_SECRET_KEY=change_me_to_a_32_char_random_value
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# ------------------------------------------------------------------------------
# LOGGING & DIRECTORIES
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./data/zantara_rag.log
RAW_BOOKS_DIR=./data/raw_books
PROCESSED_DIR=./data/processed
BATCH_SIZE=10

# ------------------------------------------------------------------------------
# EMBEDDINGS + AI MODELS
# ------------------------------------------------------------------------------
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CREDENTIALS_JSON=""
HF_API_KEY=your_huggingface_api_key

ZANTARA_AI_MODEL=gpt-4o-mini
ZANTARA_AI_COST_INPUT=0.15
ZANTARA_AI_COST_OUTPUT=0.60
OPENROUTER_API_KEY_LLAMA=your_openrouter_key

# Optional / experimental providers
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEKV3_1_API_KEY=
MINIMAXM2_API_KEY=
TONGY30B_API_KEY=
QWEN3C0DER480B_API_KEY=
LLAMA4SCOUT_API_KEY=
GROKCODEFAST_API_KEY=
GEMINI2_0FLASH_API_KEY=
GROKFAST_API_KEY=
LLAMA_GITHUB_TOKEN=
CURSOR_API_KEY=
KIMI_API_KEY=
GLM_API_KEY=

# Chunking
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_BOOK=1000

# ------------------------------------------------------------------------------
# VECTOR DATABASE / RAG
# ------------------------------------------------------------------------------
QDRANT_URL=https://nuzantara-qdrant.fly.dev
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=knowledge_base

# ------------------------------------------------------------------------------
# DATABASES & CACHES
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/nuzantara
REDIS_URL=redis://default:password@localhost:6379/0

# ------------------------------------------------------------------------------
# TIMEOUTS (seconds)
# ------------------------------------------------------------------------------
TIMEOUT_DEFAULT=30
TIMEOUT_AI_RESPONSE=60
TIMEOUT_RAG_QUERY=10
TIMEOUT_TOOL_EXECUTION=30
TIMEOUT_STREAMING=120
TIMEOUT_INTERNAL_API=5

# ------------------------------------------------------------------------------
# RERANKER CONFIGURATION
# ------------------------------------------------------------------------------
ENABLE_RERANKER=false
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKER_TOP_K=5
RERANKER_LATENCY_TARGET_MS=50
RERANKER_CACHE_ENABLED=true
RERANKER_CACHE_SIZE=1000
RERANKER_BATCH_ENABLED=true
RERANKER_AUDIT_ENABLED=true
RERANKER_RATE_LIMIT_PER_MINUTE=100
RERANKER_RATE_LIMIT_PER_HOUR=1000
RERANKER_OVERFETCH_COUNT=20
RERANKER_RETURN_COUNT=5

# ------------------------------------------------------------------------------
# FEATURE FLAGS
# ------------------------------------------------------------------------------
ENABLE_SKILL_DETECTION=false
ENABLE_COLLECTIVE_MEMORY=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_TOOL_EXECUTION=false

# ------------------------------------------------------------------------------
# TYPESCRIPT BACKEND INTEGRATION
# ------------------------------------------------------------------------------
TS_BACKEND_URL=https://nuzantara-backend.fly.dev
TS_INTERNAL_API_KEY=

# ------------------------------------------------------------------------------
# CORS / ORIGINS
# ------------------------------------------------------------------------------
ZANTARA_ALLOWED_ORIGINS=https://app.nuzantara.ai
DEV_ORIGINS=http://localhost:4173,http://127.0.0.1:4173,http://localhost:3000,http://127.0.0.1:3000

# ------------------------------------------------------------------------------
# NOTIFICATIONS & INTEGRATIONS
# ------------------------------------------------------------------------------
SENDGRID_API_KEY=
