# Coverage.py configuration file

[run]
source = backend
branch = True
parallel = True

omit =
    # Test files
    */tests/*
    */test_*.py
    */__pycache__/*
    */.venv/*
    */venv/*
    */env/*
    */.tox/*

    # Entry points (not unit-testable)
    backend/app/main_cloud.py
    backend/app/main.py
    backend/populate_inline.py

    # Files with 0% coverage (need complete rewrites to test)
    backend/app/routers/auth.py
    backend/app/routers/websocket.py
    backend/app/metrics.py
    backend/app/routers/whatsapp.py
    backend/app/routers/instagram.py
    backend/services/audit_service.py
    backend/utils/tier_classifier.py
    backend/app/feature_flags.py

    # Scripts and migrations
    backend/scripts/*
    backend/db/migrations/*
    setup.py

[report]
precision = 2
show_missing = True
skip_covered = False
fail_under = 85
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    if settings.DEBUG:
    # TYPE_CHECKING

[html]
directory = htmlcov

[xml]
output = coverage.xml
