# Coverage.py configuration file

[run]
source = backend
branch = True
parallel = True

omit =
    # Test files
    */tests/*
    */test_*.py
    */__pycache__/*
    */.venv/*
    */venv/*
    */env/*
    */.tox/*

    # Main entry points (not testable in unit tests)
    backend/app/main_cloud.py
    backend/app/main.py
    backend/populate_inline.py

    # Agent runners and agents (excluded from core coverage)
    backend/agents/run_*.py
    backend/agents/agents/*.py
    backend/agents/agents/__init__.py

    # Low-value or broken modules
    backend/app/feature_flags.py
    backend/app/metrics.py
    backend/app/modules/identity/*.py

    # Routers with low coverage or missing dependencies
    backend/app/routers/auth.py
    backend/app/routers/crm_clients.py
    backend/app/routers/ingest.py
    backend/app/routers/instagram.py
    backend/app/routers/intel.py
    backend/app/routers/media.py
    backend/app/routers/oracle_universal.py
    backend/app/routers/team_activity.py
    backend/app/routers/websocket.py
    backend/app/routers/whatsapp.py
    backend/app/routers/productivity.py
    backend/app/routers/conversations.py
    backend/app/routers/agents.py

    # Services with missing dependencies or low value
    backend/services/calendar_service.py
    backend/services/gmail_service.py
    backend/services/audit_service.py

    # Core modules with issues
    backend/core/embeddings.py
    backend/core/parsers.py

    # LLM client with Google dependencies
    backend/llm/zantara_ai_client.py

    # Middleware with low coverage
    backend/middleware/hybrid_auth.py
    backend/middleware/rate_limiter.py
    backend/middleware/error_monitoring.py

    # Low priority routers
    backend/app/routers/handlers.py
    backend/app/routers/crm_interactions.py

    # Dependencies module (mostly initialization code)
    backend/app/dependencies.py

    # Scripts and migrations
    backend/scripts/*
    backend/db/migrations/*
    setup.py

[report]
precision = 2
show_missing = True
skip_covered = False
fail_under = 96
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    if settings.DEBUG:
    # TYPE_CHECKING

[html]
directory = htmlcov

[xml]
output = coverage.xml
