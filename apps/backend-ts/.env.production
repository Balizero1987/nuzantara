# ==============================================
# ðŸš€ ZANTARA Backend Production Environment
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Application Configuration
APP_NAME=ZANTARA
APP_VERSION=2.0.0
APP_URL=https://nuzantara-core.fly.dev

# Database Configuration
DATABASE_URL=${DATABASE_URL}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_DB=${POSTGRES_DB}

# Redis Configuration
REDIS_URL=${REDIS_URL}

# Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# AI/LLM Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
OPENROUTER_API_KEY=${OPENROUTER_API_KEY}

# Vector Database
QDRANT_URL=${QDRANT_URL}
QDRANT_API_KEY=${QDRANT_API_KEY}

# External Services
MEMORY_SERVICE_URL=${MEMORY_SERVICE_URL}
COLLECTIVE_MEMORY_URL=${COLLECTIVE_MEMORY_URL}

# Feature Flags
ENABLE_AGENT_THOUGHTS=true
ENABLE_EMOTIONAL_UI=true
ENABLE_RLHF_FEEDBACK=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://nuzantara-core.fly.dev
HELMET_ENABLED=true
BCRYPT_SALT_ROUNDS=12

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Performance
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=30000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=json,csv,txt,md

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Session Management
SESSION_SECRET=${SESSION_SECRET}
SESSION_TIMEOUT=3600000