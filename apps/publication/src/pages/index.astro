---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import FeaturedArticles from '../components/FeaturedArticles.astro';
import ContentPillars from '../components/ContentPillars.astro';
import CTASection from '../components/CTASection.astro';
import Footer from '../components/Footer.astro';

const pageTitle = 'Bali Zero Insights | From Zero to Infinity';
const pageDescription = 'Premium business intelligence and cultural wisdom for your Indonesia journey. Powered by ZANTARA AI, we accompany expats and entrepreneurs from Zero to Infinity.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <main class="bg-bz-black min-h-screen">
    <Header />
    <HeroSection />
    <FeaturedArticles />
    <ContentPillars />
    <CTASection />
    <Footer />
  </main>
</BaseLayout>
