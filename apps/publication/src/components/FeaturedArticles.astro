---
// FeaturedArticles component - McKinsey-style 4-card asymmetric grid
const articles = [
  {
    id: "1",
    title: "Your KITAS Journey: From Zero to Belonging",
    category: "Visa Journey",
    excerpt: "How to navigate Indonesian immigration with cultural grace and practical wisdom.",
    image: "/images/generated/journey-visa-gateway.jpg",
    size: "large",
    href: "/articles/kitas-journey",
  },
  {
    id: "2",
    title: "PT PMA Formation Guide 2025",
    category: "Business",
    excerpt: "Building your Indonesian company with cultural foundation.",
    image: "/images/generated/journey-business-foundation.jpg",
    size: "small",
    href: "/articles/pt-pma-guide",
  },
  {
    id: "3",
    title: "Understanding Tri Hita Karana",
    category: "Cultural Wisdom",
    excerpt: "Balinese harmony philosophy for business and life.",
    image: "/images/generated/article-cultural-insight.jpg",
    size: "small",
    href: "/articles/tri-hita-karana",
  },
  {
    id: "4",
    title: "Finding Home in Bali",
    category: "Home Journey",
    excerpt: "Real estate, community, and belonging in Indonesian culture.",
    image: "/images/generated/journey-home-belonging.jpg",
    size: "medium",
    href: "/articles/finding-home-bali",
  }
];

const sizeClasses = {
  large: "col-span-1 md:col-span-2 row-span-2",
  medium: "col-span-1 md:col-span-2 row-span-1",
  small: "col-span-1 row-span-1",
};
---

<section id="insights" class="py-20 px-4 md:px-6 lg:px-8 bg-bz-black">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="mb-12">
      <span class="text-bz-red font-display font-bold text-sm tracking-widest">FEATURED WISDOM</span>
      <h2 class="text-bz-cream font-display font-bold text-4xl md:text-5xl mt-2">Latest Insights</h2>
    </div>

    <!-- Articles Grid - Asymmetric Layout -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[300px] md:auto-rows-[350px]">
      {articles.map((article) => (
        <article class={`${sizeClasses[article.size]} group relative overflow-hidden bg-bz-black/30 rounded-lg cursor-pointer transition-all duration-300 hover:shadow-2xl`}>
          <!-- Image -->
          <div class="absolute inset-0">
            <img
              src={article.image}
              alt={article.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <!-- Dark overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-bz-black via-bz-black/60 to-transparent opacity-85 group-hover:opacity-75 transition-opacity"></div>
            <!-- Red shimmer edge -->
            <div class="absolute inset-x-0 bottom-0 h-0.5" style="background: linear-gradient(90deg, rgba(255,0,0,0) 0%, rgba(255,0,0,0.35) 50%, rgba(255,0,0,0) 100%);"></div>
          </div>

          <!-- Content -->
          <a href={article.href} class="absolute inset-0 p-4 md:p-6 flex flex-col justify-between">
            <div>
              <span class="inline-block text-bz-red text-xs font-bold tracking-widest mb-3">{article.category}</span>
            </div>

            <div class="space-y-3">
              <h3 class="text-bz-cream font-display font-bold text-lg md:text-2xl leading-tight group-hover:text-bz-red transition-colors">
                {article.title}
              </h3>
              {article.size !== "small" && (
                <p class="text-bz-white/70 font-body text-sm md:text-base leading-relaxed hidden md:block">
                  {article.excerpt}
                </p>
              )}
              <div class="flex items-center gap-2 text-bz-red font-body font-bold text-sm opacity-0 group-hover:opacity-100 transition-opacity">
                Read More â†’
              </div>
            </div>
          </a>

          <!-- Shimmer effect on hover -->
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity shimmer"></div>
        </article>
      ))}
    </div>

    <!-- View All Button -->
    <div class="mt-12 flex justify-center">
      <a href="/articles" class="border-2 border-bz-cream text-bz-cream px-8 py-3 font-display font-bold hover:bg-bz-cream hover:text-bz-black transition-colors rounded-lg">
        View All Articles
      </a>
    </div>
  </div>
</section>

