---
interface Props {
  title: string;
  subtitle: string;
  cta?: {
    text: string;
    href: string;
  };
}

const { title, subtitle, cta } = Astro.props;
---

<section class="container-custom pt-12 pb-24">
  <div class="max-w-4xl mx-auto text-center">
    <!-- Small brand indicator -->
    <div class="inline-flex items-center gap-2 bg-bz-red/10 border border-bz-red/30 rounded-full px-6 py-2 mb-8">
      <span class="w-2 h-2 bg-bz-red rounded-full animate-pulse"></span>
      <span class="text-sm font-semibold text-bz-red">Bali Zero Insights</span>
    </div>

    <!-- Main heading -->
    <h1 class="font-display font-bold text-bz-white mb-6 leading-tight">
      {title}
    </h1>

    <!-- Subtitle -->
    <p class="text-body-xl text-bz-white/70 max-w-2xl mx-auto mb-12">
      {subtitle}
    </p>

    <!-- CTA -->
    {cta && (
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={cta.href} class="cta-button">
          {cta.text}
        </a>
        <a href="https://zantara.balizero.com" target="_blank" class="cta-button-outline">
          Ask ZANTARA
        </a>
      </div>
    )}
  </div>

  <!-- Decorative gradient -->
  <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-bz-red/5 rounded-full blur-3xl"></div>
  </div>
</section>
