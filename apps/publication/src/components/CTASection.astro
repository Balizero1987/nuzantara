        {["200+ Transformations", "Cultural Intelligence", "Bali & Beyond", "From Zero to Infinity âˆž"].map((item) => (
          <div class="text-bz-white/40 font-body font-medium">
            {item}
          </div>
        ))}
      </div>
    </div>

    <!-- WhatsApp CTA -->
    <div class="mt-12">
      <p class="text-bz-white/60 font-body text-sm mb-4">Need immediate guidance?</p>
      <a 
        href="https://wa.me/6285904369574" 
        target="_blank"
        class="inline-flex items-center gap-2 text-bz-red hover:text-bz-red/80 font-body font-semibold transition-colors"
      >
