---
interface Props {
  title: string;
  description: string;
  slug: string;
  pillar: string;
  readTime: string;
  date: string;
  image?: string;
}

const { title, description, slug, pillar, readTime, date, image } = Astro.props;

// Format date
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="group">
  <a href={`/articles/${slug}`} class="block">
    <!-- Image -->
    {image && (
      <div class="relative overflow-hidden rounded-lg mb-6 aspect-video bg-bz-black/50">
        <img
          src={image}
          alt={title}
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
        />
        <!-- Gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-bz-black/60 to-transparent"></div>
      </div>
    )}

    <!-- Meta -->
    <div class="flex items-center gap-3 mb-4">
      <span class="text-sm font-semibold text-bz-red">
        {pillar}
      </span>
      <span class="text-sm text-bz-gray">•</span>
      <span class="text-sm text-bz-gray">
        {readTime}
      </span>
      <span class="text-sm text-bz-gray">•</span>
      <span class="text-sm text-bz-gray">
        {formattedDate}
      </span>
    </div>

    <!-- Title -->
    <h3 class="font-display font-bold text-display-sm text-bz-white mb-4 group-hover:text-bz-red transition-colors">
      {title}
    </h3>

    <!-- Description -->
    <p class="text-body text-bz-white/70 mb-6">
      {description}
    </p>

    <!-- Read more -->
    <div class="flex items-center gap-2 text-bz-red font-semibold group-hover:gap-4 transition-all">
      <span>Read Analysis</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </a>
</article>
