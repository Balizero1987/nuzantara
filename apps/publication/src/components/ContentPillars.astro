---
// ContentPillars component - 4 Journey Themes
const pillars = [
  {
    id: "1",
    title: "Visa Journey",
    description: "From Tourist to Resident: Your gateway to Indonesian community. KITAS, visas, and cultural integrationrud.",
    icon: "/images/generated/icon-visa-gold.jpg",
    bgImage: "/images/generated/journey-threshold.jpg",
  },
  {
    id: "2",
    title: "Business Journey",
    description: "From Dream to Reality: PT PMA formation, Indonesian business culture, and building with JIWA foundation.",
    icon: "/images/generated/icon-business-gold.jpg",
    bgImage: "/images/generated/journey-foundation.jpg",
  },
  {
    id: "3",
    title: "Home Journey",
    description: "From Visitor to Belonging: Finding your place in Bali, real estate wisdom, and community integration.",
    icon: "/images/generated/icon-home-gold.jpg",
    bgImage: "/images/generated/journey-belonging.jpg",
  },
  {
    id: "4",
    title: "Cultural Wisdom",
    description: "From Outsider to Insider: Indonesian philosophy, Balinese traditions, and understanding JIWA deeply.",
    icon: "/images/generated/icon-culture-gold.jpg",
    bgImage: "/images/generated/journey-wisdom.jpg",
  },
];
---

<section class="py-20 px-4 md:px-6 lg:px-8 bg-bz-black border-t border-bz-gray/20">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="mb-16 text-center">
      <span class="text-bz-red font-display font-bold text-sm tracking-widest">YOUR INDONESIA COMPANION</span>
      <h2 class="text-bz-cream font-display font-bold text-4xl md:text-5xl mt-4">Journey Themes</h2>
      <p class="text-bz-white/70 font-body text-lg mt-4 max-w-2xl mx-auto">
        Bali Zero accompanies you through every stage of your Indonesia transformation, with cultural intelligence and practical wisdom.
      </p>
    </div>

    <!-- Pillars Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {pillars.map((pillar) => (
        <div class="group relative overflow-hidden rounded-lg border border-bz-gray/20 hover:border-bz-red transition-all duration-500 hover:shadow-2xl hover:shadow-bz-red/20 cursor-pointer h-96">
          <!-- Background Image -->
          <div class="absolute inset-0">
            <img 
              src={pillar.bgImage} 
              alt={pillar.title}
              class="w-full h-full object-cover opacity-30 group-hover:opacity-40 group-hover:scale-110 transition-all duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-bz-black via-bz-black/80 to-transparent"></div>
          </div>

          <!-- Content -->
          <div class="relative h-full p-6 flex flex-col justify-between">
            <!-- Icon -->
            <div class="w-16 h-16 group-hover:scale-110 transition-transform duration-300">
              <img src={pillar.icon} alt="" class="w-full h-full object-contain" />
            </div>

            <div>
              <!-- Title -->
              <h3 class="text-bz-cream font-display font-bold text-xl mb-3 group-hover:text-bz-red transition-colors">
                {pillar.title}
              </h3>

              <!-- Description -->
              <p class="text-bz-white/70 font-body text-sm leading-relaxed">{pillar.description}</p>

              <!-- Bottom accent line -->
              <div class="mt-4 h-1 w-0 bg-bz-red group-hover:w-full transition-all duration-500"></div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <p class="text-bz-white/70 font-body text-lg mb-6">Every journey from Zero to Infinity begins with understanding</p>
      <a href="#articles" class="bg-bz-red text-white px-8 py-3 font-display font-bold hover:bg-bz-red/90 transition-colors inline-block rounded-lg">
        Explore All Journeys
      </a>
    </div>
  </div>
</section>

