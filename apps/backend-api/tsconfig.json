{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["*.ts", "handlers/**/*", "core/**/*", "middleware/**/*", "services/**/*", "utils/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "legacy-js/**/*",
    "agents/**/*",
    "core/zantara-orchestrator.ts"
  ]
}
