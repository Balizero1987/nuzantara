# API Configuration
VITE_API_BASE_URL=https://nuzantara-rag.fly.dev
VITE_BACKEND_URL=https://nuzantara-rag.fly.dev

# Application Configuration
VITE_APP_NAME=ZANTARA
VITE_APP_VERSION=2.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_AGENT_THOUGHTS=true
VITE_ENABLE_EMOTIONAL_UI=true
VITE_ENABLE_RLHF_FEEDBACK=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=true

# Chat Configuration
VITE_CHAT_STREAM_TIMEOUT=30000
VITE_CHAT_MAX_RETRIES=3
VITE_CHAT_SESSION_TIMEOUT=3600000

# Authentication
VITE_AUTH_REQUIRED=false
VITE_AUTH_TEAM_MODE=true

# CDN and Assets
VITE_CDN_URL=
VITE_ASSETS_PATH=/assets/

# Monitoring
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Development (disabled in production)
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_DEBUG_MODE=false