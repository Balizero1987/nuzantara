# =============================================================================
# NUZANTARA WEBAPP - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Do NOT commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# PUBLIC VARIABLES (exposed to browser)
# -----------------------------------------------------------------------------
# These variables are prefixed with NEXT_PUBLIC_ and are available client-side

# API URL for client-side requests (uses proxy route by default)
# In production, this is handled by the /api/backend proxy
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Application URL (used for callbacks, OAuth, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Key (legacy support - prefer JWT auth)
NEXT_PUBLIC_API_KEY=your-public-api-key-here

# -----------------------------------------------------------------------------
# SERVER-SIDE VARIABLES (NOT exposed to browser)
# -----------------------------------------------------------------------------
# These variables are only available in API routes and server components

# Direct backend URL for server-side requests
# Used by API routes to communicate with FastAPI backend
NUZANTARA_API_URL=https://nuzantara-rag.fly.dev

# API Key for server-to-server authentication
# This is injected by the proxy and never exposed to the client
NUZANTARA_API_KEY=your-server-api-key-here

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# JWT Secret (must match backend JWT_SECRET_KEY)
# Used for token validation in middleware
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long

# -----------------------------------------------------------------------------
# E2E TESTING (Playwright)
# -----------------------------------------------------------------------------
# Test credentials for automated E2E tests
E2E_TEST_EMAIL=test@example.com
E2E_TEST_PIN=123456

# Enable rate limit testing
TEST_RATE_LIMITS=false

# Base URL for E2E tests (defaults to NEXT_PUBLIC_APP_URL)
# PLAYWRIGHT_BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------
# Enable development mode features
NODE_ENV=development

# Skip authentication in development (NOT for production!)
# DEV_AUTH_BYPASS=false

# -----------------------------------------------------------------------------
# ANALYTICS & MONITORING (optional)
# -----------------------------------------------------------------------------
# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
