# ZANTARA RAG Configuration

# Embeddings Provider (choose one)
# Option 1: Sentence Transformers (FREE, local, no API key needed)
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384

# Option 2: OpenAI (paid, requires API key, better quality)
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_DIMENSIONS=1536

# Chroma Vector Database
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=zantara_books

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_CHUNKS_PER_BOOK=1000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/zantara_rag.log

# Ingestion Settings
RAW_BOOKS_DIR=./data/raw_books
PROCESSED_DIR=./data/processed
BATCH_SIZE=10

# Tier Classification (optional overrides)
# Format: book_title_pattern:tier
# Example: "quantum*:S,consciousness*:A"
TIER_OVERRIDES=