# Grafana Cloud Configuration
# Get these from: https://grafana.com/orgs/YOUR-ORG/api-keys
GRAFANA_USERNAME=your-grafana-instance-id
GRAFANA_API_KEY=your-grafana-api-key

# Sentry Configuration
# Get this from: https://sentry.io/settings/YOUR-ORG/projects/YOUR-PROJECT/keys/
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=https://tempo-us-central.grafana.net/tempo
OTEL_SERVICE_NAME=nuzantara-backend

# Application Configuration
NODE_ENV=production
SERVICE_NAME=nuzantara-backend
npm_package_version=1.0.0

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379

# Database Configuration (if using Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/nuzantara

# ChromaDB Configuration (if using ChromaDB)
CHROMA_DB_PATH=/path/to/chromadb

# Slack Webhook for Alerts (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration for Alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL_FROM=alerts@nuzantara.com
ALERT_EMAIL_TO=team@nuzantara.com

# Monitoring Configuration
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_SCRAPE_INTERVAL=15s
LOG_LEVEL=info

# Feature Flags
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_LOGGING=true
ENABLE_ERROR_TRACKING=true
