{
  "name": "@nuzantara/monitoring",
  "version": "1.0.0",
  "description": "Monitoring and Observability Stack for Nuzantara - PATCH-2",
  "main": "instrumentation.js",
  "types": "instrumentation.d.ts",
  "scripts": {
    "build": "tsc",
    "start:monitoring": "docker-compose -f docker-compose.monitoring.yml up -d",
    "stop:monitoring": "docker-compose -f docker-compose.monitoring.yml down",
    "logs:monitoring": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "health": "curl http://localhost:8080/health",
    "metrics": "curl http://localhost:8080/metrics"
  },
  "keywords": ["monitoring", "observability", "telemetry", "prometheus", "grafana", "sentry", "opentelemetry"],
  "author": "Nuzantara Team",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.52.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.56.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-node": "^0.56.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@sentry/node": "^8.38.0",
    "@sentry/profiling-node": "^8.38.0",
    "express": "^4.21.1",
    "ioredis": "^5.4.1",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@prisma/client": {
      "optional": true
    }
  }
}
