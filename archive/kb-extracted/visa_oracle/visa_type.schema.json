{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://kb.visa-oracle/schema/visa_type.schema.json",
  "title": "Visa Type (Normalized)",
  "description": "Canonical structure for a single visa/permit type used by Visa Oracle.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "code",
    "name",
    "jurisdiction",
    "validity",
    "can_work",
    "sponsor",
    "process",
    "costs",
    "legal_basis",
    "last_updated"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "code": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "jurisdiction": {
      "type": "string",
      "const": "ID"
    },
    "category": {
      "type": "string",
      "enum": [
        "visitor",
        "kitas",
        "kitap",
        "golden",
        "second_home",
        "student",
        "family",
        "business",
        "other"
      ]
    },
    "entry_type": {
      "type": "string",
      "enum": [
        "single",
        "multiple",
        "n/a"
      ]
    },
    "validity": {
      "type": "object",
      "required": [
        "min_months",
        "max_months"
      ],
      "properties": {
        "min_months": {
          "type": "number"
        },
        "max_months": {
          "type": "number"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "can_work": {
      "type": "boolean"
    },
    "work_scope": {
      "type": "string"
    },
    "can_do_business": {
      "type": "boolean"
    },
    "sponsor": {
      "type": "object",
      "required": [
        "required"
      ],
      "properties": {
        "required": {
          "type": "boolean"
        },
        "types": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "eligibility": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "documents": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/DocumentRef"
      }
    },
    "process": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/ProcessStep"
      }
    },
    "biometrics": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "effective_date": {
          "type": "string",
          "format": "date"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "merp": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean"
        },
        "cost": {
          "$ref": "#/definitions/CostItem"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "costs": {
      "type": "object",
      "properties": {
        "currency": {
          "type": "string",
          "default": "USD"
        },
        "breakdown": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CostItem"
          }
        },
        "totals": {
          "type": "object",
          "properties": {
            "employer": {
              "type": "number"
            },
            "employee": {
              "type": "number"
            },
            "applicant": {
              "type": "number"
            },
            "notes": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "renewals": {
      "type": "object",
      "properties": {
        "allowed": {
          "type": "boolean"
        },
        "frequency_months": {
          "type": "number"
        },
        "limits": {
          "type": "string"
        },
        "process": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProcessStep"
          }
        }
      }
    },
    "legal_basis": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/LegalCitation"
      },
      "minItems": 1
    },
    "checklist": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ChecklistItem"
      }
    },
    "notes": {
      "type": "string"
    },
    "effective_date": {
      "type": "string",
      "format": "date"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    }
  },
  "definitions": {
    "DurationRange": {
      "type": "object",
      "required": [
        "min_days",
        "max_days"
      ],
      "properties": {
        "min_days": {
          "type": "number"
        },
        "max_days": {
          "type": "number"
        },
        "typical_days": {
          "type": "number"
        }
      }
    },
    "ProcessStep": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/DurationRange"
        },
        "depends_on": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "responsible": {
          "type": "string"
        }
      }
    },
    "CostItem": {
      "type": "object",
      "required": [
        "label",
        "amount"
      ],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "USD"
        },
        "payer": {
          "type": "string",
          "enum": [
            "employer",
            "employee",
            "applicant",
            "sponsor",
            "other"
          ]
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "DocumentRef": {
      "type": "object",
      "required": [
        "title"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "section": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "LegalCitation": {
      "type": "object",
      "required": [
        "ref_id",
        "title"
      ],
      "properties": {
        "ref_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "citation": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "ChecklistItem": {
      "type": "object",
      "required": [
        "id",
        "text"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "depends_on": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  }
}