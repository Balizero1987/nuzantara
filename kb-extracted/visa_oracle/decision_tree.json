  "rules": [
    {
      "when": {
        "purpose": "remote_work",
        "income_remote": "yes"
      },
      "recommend": [
        {
          "code": "E33G",
          "reason": "Lavoro remoto per datore estero (income ≥ USD 2.000/mese)"
        }
      ]
    },
    {
      "when": {
        "purpose": "remote_work",
        "income_remote": "no"
      },
      "recommend": [
        {
          "code": "C1",
          "reason": "Turismo fino a 180 gg (no lavoro)"
        }
      ]
    },
    {
      "when": {
        "purpose": "employment"
      },
      "recommend": [
        {
          "code": "E23",
          "reason": "Impiegarsi presso azienda in Indonesia (RPTKA→KITAS)"
        }
      ]
    },
    {
      "when": {
        "purpose": "invest",
        "capital": "yes"
      },
      "recommend": [
        {
          "code": "E28A",
          "reason": "Investor KITAS (PT PMA ≥ IDR 10B)"
        }
      ]
    },
    {
      "when": {
        "purpose": "invest",
        "capital": "no"
      },
      "recommend": [
        {
          "code": "C2",
          "reason": "Business visit (no lavoro)"
        },
        {
          "code": "D2",
          "reason": "Ingresso multiplo per visite frequenti"
        }
      ]
    },
    {
      "when": {
        "purpose": "spouse"
      },
      "recommend": [
