          "threshold": "> 1% of revenue",
          "riskScore": 15,
          "example": "IDR 500M revenue, IDR 7M entertainment = 1.4% (high risk)",
          "mitigation": "Detailed receipts, business justification for each expense"
        },
        "relatedParty": {
          "threshold": "> 30% of revenue",
          "riskScore": 25,
          "example": "IDR 500M revenue, IDR 180M related party transactions = 36%",
          "mitigation": "Transfer pricing documentation, benchmark study, master file"
        },
        "cashTransactions": {
          "threshold": "> 10% of revenue",
          "riskScore": 10,
          "example": "IDR 500M revenue, IDR 60M cash = 12% (red flag)",
          "mitigation": "Bank all transactions, digital payment adoption"
        }
      },
      "vatGap": {
        "threshold": "Output/Input ratio unusual",
        "riskScore": 20,
        "example": "Output VAT IDR 55M but Input VAT IDR 2M (98% gap = suspicious)",
