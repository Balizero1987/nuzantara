{
  "name": "zantara-migration-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for ZANTARA ChromaDB migration",
  "main": "test-migration.ts",
  "scripts": {
    "test": "jest test-migration.ts",
    "test:watch": "jest test-migration.ts --watch",
    "test:coverage": "jest test-migration.ts --coverage",
    "test:performance": "ts-node test-migration.ts --benchmark",
    "test:unit": "jest test-migration.ts --testNamePattern=\"Unit Tests\"",
    "test:integration": "jest test-migration.ts --testNamePattern=\"Integration Tests\"",
    "test:performance": "jest test-migration.ts --testNamePattern=\"Performance Tests\"",
    "test:integrity": "jest test-migration.ts --testNamePattern=\"Data Integrity Tests\"",
    "test:errors": "jest test-migration.ts --testNamePattern=\"Error Recovery Tests\"",
    "test:migration": "jest test-migration.ts --testNamePattern=\"Migration Workflow Tests\""
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "collectCoverageFrom": ["test-migration.ts", "!**/node_modules/**"],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 60000
  },
  "dependencies": {
    "chromadb": "^1.8.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.1",
    "crypto-js": "^4.2.0"
  }
}
