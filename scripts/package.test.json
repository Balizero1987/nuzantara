{
  "name": "zantara-migration-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for ZANTARA ChromaDB migration",
  "main": "test-migration.ts",
  "scripts": {
    "test": "jest test-migration.ts --detectOpenHandles",
    "test:watch": "jest test-migration.ts --watch --detectOpenHandles",
    "test:coverage": "jest test-migration.ts --coverage --detectOpenHandles",
    "test:unit": "jest test-migration.ts --testNamePattern=\"Unit Tests\" --detectOpenHandles",
    "test:integration": "jest test-migration.ts --testNamePattern=\"Integration Tests\" --detectOpenHandles",
    "test:performance": "jest test-migration.ts --testNamePattern=\"Performance Tests\" --detectOpenHandles",
    "test:integrity": "jest test-migration.ts --testNamePattern=\"Data Integrity Tests\" --detectOpenHandles",
    "test:errors": "jest test-migration.ts --testNamePattern=\"Error Recovery Tests\" --detectOpenHandles",
    "test:migration": "jest test-migration.ts --testNamePattern=\"Migration Workflow Tests\" --detectOpenHandles",
    "test:benchmark": "ts-node test-migration.ts --benchmark",
    "generate-data": "ts-node sample-data-generator.ts generate 100 ./sample-data",
    "generate-large": "ts-node sample-data-generator.ts large 50 10 ./large-data",
    "generate-multilingual": "ts-node sample-data-generator.ts multilingual 30 ./multi-data",
    "setup": "npm install && npm run generate-data",
    "clean": "rm -rf sample-data large-data multi-data coverage",
    "test:ci": "jest test-migration.ts --coverage --ci --reporters=default --reporters=jest-junit --detectOpenHandles"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "globals": {
      "ts-jest": {
        "useESM": true,
        "tsconfig": "tsconfig.test.json"
      }
    },
    "collectCoverageFrom": [
      "test-migration.ts",
      "sample-data-generator.ts",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testTimeout": 60000,
    "detectOpenHandles": true,
    "forceExit": true,
    "verbose": true,
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "coverage",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "dependencies": {
    "chromadb": "^1.8.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "@types/crypto-js": "^4.2.1",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "mocha": "^10.2.0"
  }
}