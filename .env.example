# =============================================================================
# NUZANTARA PLATFORM - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Do NOT commit the actual .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# PLATFORM CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=development
PLATFORM_VERSION=5.2.0

# -----------------------------------------------------------------------------
# BACKEND RAG (Python FastAPI) CONFIGURATION
# -----------------------------------------------------------------------------
RAG_BACKEND_URL=https://nuzantara-rag.fly.dev
TS_BACKEND_URL=https://nuzantara-ts.fly.dev

# Database Configuration (Backend RAG)
DATABASE_URL=postgresql://user:password@localhost:5432/nuzantara_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration (Backend RAG)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE_HOURS=24

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Additional CORS Origins for specific services
# For Memory Service (comma-separated)
MEMORY_SERVICE_CORS_ORIGINS=https://nuzantara-backend.fly.dev,http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080

# Oracle Configuration
ZANTARA_ORACLE_URL=http://localhost:11434/api/generate
ORACLE_API_KEY=your-oracle-api-key

# Development Origins (for backend RAG)
DEV_ORIGINS=http://localhost:4173,http://127.0.0.1:4173,http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# MEMORY SERVICE CONFIGURATION
# -----------------------------------------------------------------------------
MEMORY_SERVICE_PORT=8080
MEMORY_SERVICE_HOST=localhost

# Database Configuration (Memory Service)
MEMORY_DATABASE_URL=postgresql://postgres:password@localhost:5432/memory_db

# Redis Configuration (Memory Service)
MEMORY_REDIS_URL=redis://localhost:6379/1

# -----------------------------------------------------------------------------
# WEBAPP NEXT.JS CONFIGURATION
# -----------------------------------------------------------------------------
# Frontend will use RAG_BACKEND_URL from above
# Next.js specific
NEXT_PUBLIC_APP_NAME=Nuzantara
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered knowledge platform

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
# API Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# -----------------------------------------------------------------------------
# DEVELOPMENT ONLY
# -----------------------------------------------------------------------------
# Enable development features
DEV_MODE=true
DEV_TOKEN_BYPASS=true

# Local development ports
WEBAPP_DEV_PORT=3000
MEMORY_SERVICE_DEV_PORT=8080
BACKEND_RAG_DEV_PORT=8000

# -----------------------------------------------------------------------------
# PRODUCTION ONLY
# -----------------------------------------------------------------------------
# Disable development features in production
# DEV_MODE=false
# DEV_TOKEN_BYPASS=false

# SSL Configuration (if using custom SSL)
SSL_CERT_PATH=
SSL_KEY_PATH=

# -----------------------------------------------------------------------------
# FLY.IO DEPLOYMENT
# -----------------------------------------------------------------------------
# These are automatically set by Fly.io, but you can override them
# FLY_APP_NAME=nuzantara-webapp
# FLY_REGION=ewr

# -----------------------------------------------------------------------------
# TESTING
# -----------------------------------------------------------------------------
# Test Database URLs
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db
TEST_REDIS_URL=redis://localhost:6379/15

# -----------------------------------------------------------------------------
# OPTIONAL FEATURES
# -----------------------------------------------------------------------------
# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_COLLECTIVE_MEMORY=true
ENABLE_WEB_SCRAPING=true

# External Services
WEBHOOK_URL=
SLACK_BOT_TOKEN=
DISCORD_BOT_TOKEN=

# -----------------------------------------------------------------------------
# PERFORMANCE TUNING
# -----------------------------------------------------------------------------
# Connection timeouts
DATABASE_TIMEOUT=30
REDIS_TIMEOUT=5
API_TIMEOUT=60

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# -----------------------------------------------------------------------------
# COMPLIANCE & PRIVACY
# -----------------------------------------------------------------------------
# Data retention policies
DATA_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=90

# Privacy settings
ENABLE_DATA_ANONYMIZATION=false
GDPR_MODE=false