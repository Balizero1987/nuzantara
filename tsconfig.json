{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./apps/backend-ts/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/backend-ts/src/*"],
      "@handlers/*": ["apps/backend-ts/src/handlers/*"],
      "@services/*": ["apps/backend-ts/src/services/*"],
      "@middleware/*": ["apps/backend-ts/src/middleware/*"],
      "@utils/*": ["apps/backend-ts/src/utils/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["apps/backend-ts/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "apps/backend-ts/src/legacy-js/**/*",
    "apps/backend-ts/src/agents/**/*",
    "apps/backend-ts/src/core/zantara-orchestrator.ts",

    "apps/backend-ts/src/handlers/zantara/zantara-brilliant.ts",
    "apps/backend-ts/src/router-v2.ts",
    "**/__tests__/**",
    "**/*.test.ts",
    "tests/**",
    "e2e/**"
  ]
}
