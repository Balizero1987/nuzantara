{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "types": ["node", "node-cron"],
    "outDir": "../../../dist",
    "rootDir": "../../../apps/backend-ts/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["../../../apps/backend-ts/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "../../../apps/backend-ts/src/agents/**/*",
    "../../../apps/backend-ts/src/archived/**/*",
    "../../../apps/backend-ts/src/core/zantara-orchestrator.ts",
    "../../../apps/backend-ts/src/**/__tests__/**/*",
    "../../../apps/backend-ts/src/**/*.test.ts",
    "../../../apps/backend-ts/src/routes/**/*",
    "../../../apps/backend-ts/src/services/imagine-art-service.ts"
  ]
}
